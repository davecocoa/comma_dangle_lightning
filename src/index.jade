      section
        h1 More code!
        pre
          code.language-javascript.
            var fs = require('fs')

            require('./eslintout.json').forEach(function(f){
              fs.readFile(f.filePath, function(err, data){
                lines = data.toString().split('\n')
                
                f.messages.forEach(function(line){
                  lines[line.line-1] = lines[line.line-1] + ','
                })
                
                fs.writeFile(f.filePath, lines.join('\n'))
              })
            })

